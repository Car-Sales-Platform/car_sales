<div class="bg-neutral p-10 rounded-md drop-shadow-2xl max-w-max">
  <h2 class="text-center font-bold text-3xl text-orange-500 capitalize font-sans">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "" }) do |f| %>
    <div class="field">
      <%= f.label :email, class: "text-lime-500" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"text-neutral rounded-full" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "text-lime-500" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class:"text-neutral rounded-full" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me, class: "text-orange-500" %>
        <%= f.label :remember_me, class: "text-lime-500" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-secondary rounded-none m-5 px-24 py-2 text-gray-300 text-lg font-sans font-medium" %>
    </div>
  <% end %>

  <%= render "devise/shared/links", class: "text-orange-500" %>
</div>
